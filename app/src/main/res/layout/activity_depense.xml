<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_depense"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mazigh_zizou.msordi.Depense"
    android:background="@drawable/arriereplan">

    <TextView
        android:text="Ajouter une dÃ©pense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="ENREGESTRER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:textSize="4mm"
        android:textColor="@android:color/background_dark"
        android:background="?attr/colorControlActivated"
        android:id="@+id/button_depense"
        android:textStyle="bold"
        tools:textColor="?android:attr/textColorSecondaryActivated"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginBottom="100dp"
        android:id="@+id/entrerdepense"
        android:textStyle="bold"
        android:layout_above="@+id/button_depense"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp" />

    <TextView
        android:text="SOMME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/entrerdepense"
        android:layout_alignBottom="@+id/entrerdepense"
        android:layout_toLeftOf="@+id/entrerdepense"
        android:layout_toStartOf="@+id/entrerdepense"
        android:textSize="4mm"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/ladate"
        android:textColorLink="@color/common_google_signin_btn_text_dark_default"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:layout_marginBottom="34dp"
        android:textSize="20sp"
        android:layout_above="@+id/entrerdepense"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="DATE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textStyle="bold"
        android:textSize="4mm"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_alignTop="@+id/ladate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

</RelativeLayout>
