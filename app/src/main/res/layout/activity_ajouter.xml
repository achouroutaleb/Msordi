<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ajouter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mazigh_zizou.msordi.Ajouter"
    android:background="@drawable/arriereplan">

    <TextView
        android:text="Ajouter une entrÃ©e "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="enregestrer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:textSize="4mm"
        android:textColor="@android:color/background_dark"
        android:background="?attr/colorControlActivated"
        android:id="@+id/ajouterentre"
        tools:textColor="?android:attr/textColorSecondaryActivated"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/lentrer"
        android:layout_above="@+id/ajouterentre"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="98dp"
        android:layout_alignLeft="@+id/iddateajouter"
        android:layout_alignStart="@+id/iddateajouter"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/iddateajouter"
        android:layout_marginBottom="42dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        android:layout_above="@+id/lentrer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="SOMME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/textView6"
        android:textSize="4mm"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_alignBaseline="@+id/lentrer"
        android:layout_alignBottom="@+id/lentrer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="DATE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:textSize="4mm"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_alignBottom="@+id/iddateajouter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
